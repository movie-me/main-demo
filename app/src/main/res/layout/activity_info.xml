<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="16dp"
    tools:context=".info.InfoActivity">

    <TextView
        android:id="@+id/movieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="movieName"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/openDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeName"
        android:layout_centerHorizontal="true"
        android:text="openDate"
        android:textColor="#a9a9a9"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeName"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/openDate"
        android:layout_toRightOf="@+id/openDate"
        android:text="nation"
        android:textColor="#a9a9a9"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="genre"
        android:textColor="#000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/typeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieName"
        android:layout_centerHorizontal="true"
        android:text="typeName"
        android:textColor="#000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/movieCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="movieCode"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/showTmInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/openDate"
        android:layout_marginTop="20dp"
        android:text="상영시간: "
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/showTm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/openDate"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/showTmInfo"
        android:text="showTm"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/openDate"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/showTm"
        android:text="분"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/directorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showTmInfo"
        android:layout_marginTop="10dp"
        android:text="감독: "
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showTmInfo"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/directorInfo"
        android:text="Director"
        android:textColor="#000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/companyInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/director"
        android:layout_marginTop="10dp"
        android:text="영화 공급 회사: "
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/director"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/companyInfo"
        android:text="Company"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/audit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/company"
        android:layout_marginTop="10dp"
        android:text="audits"
        android:textColor="#000"
        android:textSize="20sp" />

</RelativeLayout>